# /etc/kubernetes/apiserver

# The address on the local server to listen to.
KUBE_API_ADDRESS="--address=<%= @kube_api_address %>"

# The port on the local server to listen on.
KUBE_API_PORT="--port=<%= @kube_api_port %>"

# How the replication controller and scheduler find the kube-apiserver
KUBE_MASTER="--master=http://<%= @kube_master %>:<%= @kube_api_port>"

# Port minions listen on
KUBELET_PORT="--kubelet_port=<%= @kubelet_port %>"

# Address range to use for services
KUBE_SERVICE_ADDRESSES="--portal_net=<%= @kube_service_addresses %>"

# Add you own!
KUBE_API_ARGS="<%= @kube_api_args %>"