{
	"kind": "ReplicationController",
	"apiVersion": "v1beta3",
	"metadata": {
		"name": "<%= @rc_metadata_name %>",
		"labels": {
			"name": "<%= @rc_metadata_label_name %>"
		}
	},
	"spec": {
		"replicas": "<%= @rc_spec_replicas %>",
		"selector": {
			"name": "<%= @rc_spec_selector_name %>"
		},
		"template": {
			"metadata": {
				"labels": {
					"name": "<%= @rc_spec_template_metadata_label_name %>"
				}
			},
			"spec": {
				"restartPolicy": "<%= @rc_spec_template_spec_restartpolicy %>",
				"containers": [
				<% @rc_spec_template_spec_containers.each do |container| %>
				{
					"name": "<%= container[:name] %>",
					"image": "<%= container[:image] %>",
					"ports": [
					<% container[:ports].each do |port| %>
					{
						"name": "<%= port[:name] %>",
						"containerPort": "<%= port[:containerPort] %>" 
					}<% if port != container[:ports].last %>,<% end %>
					<% end %>
					],
					"volumeMounts": [
					<% container[:volumeMounts].each do |volumeMount| %>
					{
						"mountPath": "<%= volumeMount[:mountPath] %>",
						"name": "<%= volumeMount[:name] %>"
					}<% if volumeMount != container[:volumeMounts].last %>,<% end %>
					<% end %>
					]	
				}<% if container != @rc_spec_template_spec_containers.last %>,<% end %>
				<% end %>
				], 
				"volumes": [
				<% @rc_spec_template_spec_volumes.each do |volume| %>
				{
					"name": "<%= volume[:name] %>",
					"hostDir": "<%= volume[:hostDir] %>"
				}<% if volume != @rc_spec_template_spec_volumes.last %>,<% end %>
				<% end %>
				]
			}
		}
	}
}
