#!/bin/bash

# This file contains environent variables needed to run the dev workstation setup scripts.  
# Uncomment and fill in the values for each of the variables as necessary for your system.

# The chef server FQDN
export chef_server=chef-server-centos.com

# The chef server user
export chef_user=chef

# The path on the chef server where the .pem files are located
export pem_path=/home/chef

# The admin client name
export admin_client=admin

# The validator client name
export validator=isb-validator

# The absolute path to the chef-repo directory on this machine
export chef-repo=/home/abby/docker-prototyping/chef-repo
