{
	"kind": "ReplicationController",
	"apiVersion": "v1beta3",
	"metadata": {
		"name": "solr-zookeeper-pod-3",
		"labels": {
			"name": "solr-zookeeper"
		}
	},
	"spec": {
		"replicas": 1,
		"selector": {
			"name": "zookeeper-pod-3"
		},
		"template": {
			"metadata": {
				"labels": {
					"name": "solr-zookeeper"
				}
			},
			"spec": {
				"restartPolicy": "Always",
				"containers": [
					{
						"name": "solr-zookeeper-3",
						"image": "gcr.io/isb-cgc/solr-zookeeper", 
						"ports": [
							{
								"containerPort": 2181,
								"protocol": "TCP"
							},
							{
								"containerPort": 2888,
								"protocol": "TCP"
							},
							{
								"containerPort": 3888,
								"prototcol": "TCP"
							}
						],
						"volumeMounts": [
							{
								"name": "data-dir",
								"mountPath": "/var/lib/zookeeper"
							}
						
						],
						"command": ["java", "-cp", "zookeeper.jar:lib/slf4j-api-1.7.5.jar:lib/slf4j-log4j12-1.7.5.jar:lib/log4j-1.2.16.jar:conf", "org.apache.zookeeper.server.quorum.QuorumPeerMain", "zoo.cfg"]
					} ],
				"volumes": [
					{
						"name": "data-dir",
						"hostDir": "/var/lib/zookeeper/3"
					}
				]
			}
		}
	}
}
