{
	"kind": "ReplicationController",
	"apiVersion": "v1beta3",
	"metadata": {
		"name": "solr-zookeeper-controller-1",
		"labels": {
			"name": "solr-zookeeper-controller"
		}
	},
	"spec": {
		"replicas": 1,
		"selector": {
			"name": "solr-zookeeper-pod-1"
		},
		"template": {
			"metadata": {
				"labels": {
					"name": "solr-zookeeper-pod-1",
					"app": "solr-zookeeper"
				}
			},
			"spec": {
				"restartPolicy": "Always",
				"containers": [
					{
						"name": "solr-zookeeper-config-manager",
						"image": "gcr.io/isb-cgc/solr-zookeeper-config-manager",
						"ports": [
							{
								"containerPort": 8080,
								"hostPort": 8080,
								"protocol": "TCP
							}

						],
						"command": ["/zookeeper-3.4.6/startup/zookeeper_config_manager_startup.sh"],
						"volumeMounts": [
							{
								"name": "solr-zookeeper-test",
								"mountPath": "/zookeeper-3.4.6/data"
							}
						]
					},
					{
						"name": "solr-zookeeper-1",
						"image": "gcr.io/isb-cgc/solr-zookeeper", 
						"ports": [
							{
								"containerPort": 2181,
								"protocol": "TCP"
							},
							{
								"containerPort": 2888,
								"protocol": "TCP"
							},
							{
								"containerPort": 3888,
								"prototcol": "TCP"
							}
						],
						"command": ["/zookeeper-3.4.6/startup/zookeeper_startup.sh", "2"],
						"volumeMounts": [
							{
								"name": "solr-zookeeper-test",
								"mountPath": "/zookeeper-3.4.6/data"
							}
						]
					},
					{
						"name": "solr-zookeeper-maintenance-cron",
						"image": "gcr.io/isb-cgc/solr-zookeeper-maintenance-cron",
						"command": [],
						"volumeMounts": [
							{
								"name": "solr-zookeeper-test",
								"mountPath": "/zookeeper-3.4.6/data"
							}
						]
					} ],
				"volumes": [
					{
						"name": "solr-zookeeper-test",
						"gcePersistentDisk": {
							"pdName": "solr-zookeeper-test",
							"fsType": "ext4"
						}
					}
				]
			}
		}
	}
}
